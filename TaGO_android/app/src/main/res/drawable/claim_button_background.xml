<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:bottom="10dp"
        android:top="10dp"
        android:right="10dp"
        android:left="10dp"
        android:state_selected="false">

        <shape
            android:shape="rectangle">
            <corners
                android:radius="10dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/black"/>
            <solid
                android:color="@color/yellow"/>

        </shape>
    </item>

    <item
        android:bottom="10dp"
        android:top="10dp"
        android:right="10dp"
        android:left="10dp"
        android:state_selected="true">

        <shape
            android:shape="rectangle">
            <corners
                android:radius="10dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/black"/>
            <solid
                android:color="@color/grey"/>

        </shape>
    </item>

</selector>